<% provide(:title, "Comments")%>
<%=@request.content %>
<%= form_for(@request.comments.build) do |f| %>
    <%= f.hidden_field :request_id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.text_area :content, placeholder: "Comment........" %>
    <%= f.submit %>
<% end %>
<br>
<div>
    <% if @comments.any? %>
        <h3>comments ( <%= @comments.count %> )</h3>
        <ol class="comments">
            <%= render @comments %>
        </ol>
    <% end %>

</div>
