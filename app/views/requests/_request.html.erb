<li id="request-<%= request.id %>">
    <span class="user"> <%= link_to request.user.name, request.user %></span><br>
    <span class="content">
        <%= request.content %>
        <%= image_tag request.picture.url if request.picture? %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(request.created_at) %> ago.
        <% if current_user?(request.user)%>
            <%= link_to "delete", request, method: :delete,
                data: {confirm: "Are you sure you want to delete this request???"}%>
        <% end %>
    </span><br>
    <span class="comment">
        <%= link_to "comments",new_comment_path  %>
        </span>
</li>
