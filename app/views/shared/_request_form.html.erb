<%= form_for(@request, html: {multipart: true}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.text_area :content, placeholder: "Compose new Request..." %>
    </div>
    <%= f.submit "Submit" %>
    <span class="picture">
        <%= f.file_field :picture %>
        </span>
<% end %>
