<% provide(:title, "SignUp")  %>
<div class="medium-6 columns medium-offset-3">
    <h1>Sign Up Here<h1>
            <div class="callout">
                <%= form_for(@user) do |f| %>
                    <%= render 'shared/error_messages', object: f.object %>
                    <%= f.label :name %>
                    <%= f.text_field :name %>

                    <%= f.label :email %>
                    <%= f.email_field :email %>

                    <%= f.label :password %>
                    <%= f.password_field :password %>

                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation %>

                    <%= f.submit "Sign Up"  %>

                <% end %>
            </div>
</div>
